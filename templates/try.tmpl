<!-- Main Form -->
<div class="login-form-1">
  <form id="login-form" class="text-left">
    <div class="login-form-main-message"></div>
    <div class="main-login-form">
      <div class="login-group">
        <form class="form-signin" role="form" action="/login" >
          <label for="inputUsername" class="sr-only">Username</label>
         <input type="username" id="inputUsername" name="inputUsername" class="form-control" placeholder="Username" required autofocus>

         <label for="inputPassword" class="sr-only">Password</label>
         <input type="password" id="inputPassword" name="inputPassword" class="form-control" placeholder="Password" required>
           <button type="submit" class="login-button" formmethod="post"><i class="fa fa-chevron-right"></i></button>
        </form>
      </div>


    </div>
    <div class="etc-login-form">
      <p>forgot your password? <a href="#">click here</a></p>
      <p>new user? <a href="#">create new account</a></p>
    </div>
  </form>
</div>
